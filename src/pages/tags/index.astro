---
import BlogIndex from "../../layouts/BlogIndex.astro";
import { getCollection } from "astro:content";


const allPosts = await getCollection('blog');
const tags = [...new Set(allPosts.map((post: any) => post.data.tags).flat())];

const title = "Tags Index"
---

<BlogIndex
    title={title}
>
<main id="tags"></main>
<div class="index-tags">{tags.map((tag) => <a class="tag" href={`/tags/${tag}`}>{tag}</a>)}</div>
</main>
</BlogIndex>

