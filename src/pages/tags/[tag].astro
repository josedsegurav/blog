---
import BlogPost from '../../layouts/BlogPost.astro';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import FormattedDate from '../../components/FormattedDate.astro';

export async function getStaticPaths() {
    const allPosts = await getCollection('blog');
    
  return [
    { params: { tag: "Technical" }, props: {posts: allPosts} },
    { params: { tag: "Ecuador" }, props: {posts: allPosts} },
    { params: { tag: "Life Changes" }, props: {posts: allPosts} },
    { params: { tag: "Akira" }, props: {posts: allPosts} },
    { params: { tag: "Personal Growth" }, props: {posts: allPosts} },
    { params: { tag: "Emotional" }, props: {posts: allPosts} },
    { params: { tag: "Transition" }, props: {posts: allPosts} },
  ];
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post: any) => post.data.tags?.includes(tag));

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
            h1 {
                text-align: center;
            }
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			.tags {
				display: flex;
				justify-content: center;
				gap: 10px;
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
                <h1>Posts tagged with {tag}</h1>
				<ul>
					{
						filteredPosts.map((post: any) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
								<div class="tags">
									{
										post.data.tags && post.data.tags.length > 0
											? post.data.tags.map((tag: unknown) => (
												<a href={`/tags/${tag}/`} class="tag">{tag}</a>
											))
											: <span>No tags available</span>
									}
								</div>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
